extends layouts/main-layout.pug

block styles
  link(rel="stylesheet" href="/css/product.css")

block content
  if products.length > 0
    .grid
      each product in products
        article.card.product-item
          header.card__header
            h1.product__title #{product.title}
          .card__image
            img(src="https://images.unsplash.com/photo-1541963463532-d68292c34b19?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80" alt="A book")
          .card__content
            h2.product__price $19.99
            p.product__description  It's a fuckin' book
          .card__actions
            button.btn  Add To Cart
  else
    p No fuckin' books
